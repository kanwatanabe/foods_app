<% provide(:title, @user.name) %>
<div class= "text-center">
<%=image_tag @user.image.url, size: '300x225',class:"rounded-circle mt-5" if @user.image?%><br/>
<h1 class="mt-1"><%= @user.name %></h1><br/>

<!-- フォロウィング　ビュー -->
   <div class="container mb-5">
        <%= render 'shared/stats' %>
   

   <%= render 'users/follow_form' if user_signed_in? %>
   </div>

<div class="container mt-5">
    <% if @user.microposts.any? %>
      <h3>自分の投稿 (<%= @user.microposts.count %>)</h3>
      
      <div class="row">
      <div class="col-md-12">
      <div class="card-group">
        <%= render @microposts %>
      </div>
      
    <% end %>
  </div>
 </div>
 <%= paginate @microposts %>
</div>
</div>
