<% provide(:title, @user.name) %>
<div class="text-center">
  <%=image_tag @user.image.url, size: '300x225',class:"rounded-circle mt-5" if @user.image?%><br />

  <h1 class="mt-1"><%= @user.name %>
    <% if current_user != @user %>
    <%= link_to chat_path(@user.id), class: 'btn mb-1' do%>
    <i class="far fa-comment-dots fa-2x"></i>
    <% end %>
    <% end %></h1>
  <h6>
    <%= render 'shared/stats' %>
    <%= render 'users/follow_form' if user_signed_in? %><br />
  </h6>
  <h5 class="mt-1"><%= @user.profile %></h5><br />

  <div class="container mt-5">
    <% if @user.microposts.any? %>
    <h3><%="#{@user.name}の投稿"%>(<%= @user.microposts.count %>)</h3>

    <div class="row row-eq-height">
      <div class="col-md-12">
        <div class="card-group">
          <%= render @microposts %>
        </div>

        <% end %>
      </div>
    </div>
    <%= paginate @microposts %>
  </div>
</div>