<%= provide(:title, "ユーザー") %>
<div class="text-center">
  <h1 class="font-weight-bold mt-5">ユーザー</h1>
<div class="container mt-5">
  <div class="row">
  <div class="col-md-12">
  <div class="card-group">

  <% @users.each do |user| %>
  <div class="col-md-3">
    <div class="card mb-4 shadow-sm">
      <%=image_tag user.image.url, size: '300x200',class:"rounded bd-placeholder-img card-img-top" if user.image? %>

      <%= link_to "@#{user.name}", user,class: 'btn text-dark ml-2 ml-sm-0',role: 'button' %>

  </div>
  </div>
  <% end %>
 </div>


<%= will_paginate %>
</div>
</div>
</div>
</div>
