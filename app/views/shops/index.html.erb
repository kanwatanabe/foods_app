<div class="text-center">
    <h1 class="pb-3 mt-5">Shops Search!</h1>

    <div class="mt-3">

        <%=render "shops_search" %>

    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <div class="card-group">

                    <%if @rests %>
                    <% @rests.each do |rest| %>
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm text-left">

                            <%= image_tag(rest["image_url"]["shop_image1"] ,class:'bd-placeholder-img card-img-top' , size: '300x225') %>
                            <%= rest["name"] %></br>
                            <%= "住所：#{rest["code"]["prefname"]}" %></br>
                            <%= "最寄り駅：#{rest["access"]["station"]}" %>
                            <%= "徒歩：#{rest["access"]["walk"]}分" %>
                            <%= link_to "店舗HP", rest["url"], class: 'text-secondary' %>

                        </div>
                    </div>
                    <% end %>
                    <% end %>
                </div>
                <%= paginate @rests %>
            </div>
        </div>
    </div>
</div>