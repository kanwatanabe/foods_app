<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
      <%= image_tag @micropost.picture.url, class:'img-fluid' , size: '700x700' if @micropost.picture? %><br />

      <div class="mt-5">
        <%= @micropost.content %><br />
        <!--いいね機能を追加-->
        <span class="ml-2 d-sm-block" id="micropost-<%= @micropost.id %>">
          <%= render "likes/like", micropost: @micropost %>
        </span>
        <!-- ------------------------------------------------  -->
      </div>


      <%# コメント欄　追記ーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーー %>
      <div class="text-center">
        <h5 class="font-weight-bold mt-5">コメント</h5>

        <div id="comments_area">
          <%= render '/microposts/comments_index',comments: @comments %>
        </div>

        <%# ページネーション ーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーーー%>
        <%= link_to_next_page @comments, 'もっと見る', remote: true, class: 'btn btn-secondary', id: 'comment_more' %>

        <% if user_signed_in? %>
        <%= render '/microposts/comments_form'%>
        <% end %>

      </div>
      <%# --------------------------------------------------------------------------------------- %>

    </div>
  </div>
  <!--戻るボタン-->
  <%# <%= render 'microposts/back_button' %>
</div>