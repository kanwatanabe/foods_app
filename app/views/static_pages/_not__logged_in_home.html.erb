<!--ログイン前の画面-->
<div class=row>
  <div class="container pt-5 col-xs-12">
    <div class="jumbotron">
      <h1 class="display-4">ようこそ!</h1>
      <p class="lead">あなたのお気に入りの料理をみんなで共有しよう。そうすれば世界が広がるはずです。</p>
      <hr class="my-4">
      <p>さっそく新規登録、ログインをしてサービスを利用しよう。かんたんログイン機能を使えば登録せずにすぐにサービスを活用できます。</p>
      <%= link_to "新規登録", new_user_registration_path ,class: 'btn btn-secondary btn-lg',role: 'button'%>
      <%= link_to "ログイン", new_user_session_path ,class: 'btn btn-secondary btn-lg',role: 'button'%>
    </div>
  </div>

  <div class="container mt-5">

    <h1 class="text-center pb-3">Food Phots</h1>
    <!--検索機能-->
    <div class="text-center">
      <%= search_form_for(@q,url: static_pages_home_path, method: :get) do |f| %>
      <%= f.search_field :content_or_tags_name_cont, placeholder: "キーワードで検索" %>
      <%= button_tag type: 'submit',class: 'btn btn-dark mb-1' do %>
      <i class="fas fa-search"></i>
      <% end %>
      <%end%>

      <%= link_to "タグ詳細", static_pages_index_path, class: 'text-dark' %>

    </div>
  </div>

  <div class="container mt-5">

    <%=render "home_microposts" %>

  </div>
</div>